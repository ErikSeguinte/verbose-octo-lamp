{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "plugins": ["autofix", "prettier", "simple-import-sort", "import"],

  "rules": {
    "prettier/prettier": [
      "error",
      {
        // Optional Prettier config changes
        "trailingComma": "es5",
        "printWidth": 80
      }
    ],
    "react/jsx-sort-props": [
      "error",
      {
        "callbacksLast": true,
        "shorthandFirst": false,
        "shorthandLast": true,
        "multiline": "last",
        "ignoreCase": true,
        "noSortAlphabetically": false
      }
    ],
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error",


    "no-console": "warn",
    "sort-keys": "error",
    "autofix/sort-vars": "error"


  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}
